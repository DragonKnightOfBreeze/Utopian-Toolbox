<idea-plugin>
    <extensions defaultExtensionNs="icu.windea.ut.toolbox">
        <jElementProvider language="JSON" implementationClass="icu.windea.ut.toolbox.lang.json.JsonJElementProvider"/>
        <jsonPointerBasedLanguageSettingsProvider implementation="icu.windea.ut.toolbox.jsonSchema.JsonSchemaJsonPointerBasedLanguageSettingsProvider"/>
    </extensions>

    <extensions defaultExtensionNs="JavaScript">
        <JsonSchema.ProviderFactory implementation="icu.windea.ut.toolbox.jsonSchema.UtJsonSchemaProviderFactory"/>
    </extensions>
    
    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor language="JSON" implementation="icu.windea.ut.toolbox.lang.json.JsonJsonPointerBasedReferenceContributor"/>
        <annotator language="JSON" implementationClass="icu.windea.ut.toolbox.jast.JsonPointerBasedReferenceAnnotator"/>
        <targetElementEvaluator language="JSON" implementationClass="icu.windea.ut.toolbox.jast.JsonPointerBasedTargetElementEvaluator"/>
        <completion.contributor language="JSON" implementationClass="icu.windea.ut.toolbox.lang.json.JsonJsonPointerBasedReferenceCompletionContributor"/>
    </extensions>
</idea-plugin>
